<div class="mx-auto max-w-2xl">
  <div class="mb-8 border-b border-gray-200 pb-5">
    <h3 class="text-base font-semibold leading-6 text-gray-900">Nova Coleta de Dados</h3>
    <p class="mt-2 max-w-4xl text-sm text-gray-500">Informe a URL do veículo para que o robô inicie o processamento.</p>
  </div>

  <%= form_with model: @task, class: "space-y-6" do |form| %>
    <% if @task.errors.any? %>
      <div class="rounded-md bg-red-50 p-4 mb-6">
        <div class="flex">
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">Encontramos erros no formulário:</h3>
            <div class="mt-2 text-sm text-red-700">
              <ul role="list" class="list-disc pl-5 space-y-1">
                <% @task.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
      <div class="sm:col-span-4">
        <%= form.label :title, "Título da Tarefa", class: "block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
          <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md">
            <%= form.text_field :title, class: "block flex-1 border-0 bg-transparent py-1.5 pl-3 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6", placeholder: "Ex: Pesquisa Jeep Commander" %>
          </div>
        </div>
      </div>

      <div class="col-span-full">
        <%= form.label :url, "URL do Anúncio (Webmotors)", class: "block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
          <%= form.text_field :url, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", placeholder: "https://www.webmotors.com.br/..." %>
        </div>
        <p class="mt-3 text-sm leading-6 text-gray-600">Copie e cole a URL completa da página de detalhes do veículo.</p>
      </div>

      <div class="col-span-full">
        <%= form.label :description, "Observações", class: "block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
          <%= form.text_area :description, rows: 3, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
        </div>
      </div>
    </div>

    <div class="mt-6 flex items-center justify-end gap-x-6">
      <%= link_to "Cancelar", tasks_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
      <%= form.submit "Iniciar Robô", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 cursor-pointer" %>
    </div>
  <% end %>
</div>