<h1>Login</h1>

<% if flash[:alert] %>
  <div style="color: red; border: 1px solid red; padding: 10px;">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_with url: login_path, local: true do |form| %>
  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password, "Senha" %><br>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Entrar" %>
  </div>
<% end %>